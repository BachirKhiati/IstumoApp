<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wallpapers"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="132dp"
        android:layout_height="121dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageButton"
            android:layout_width="159dp"
            android:layout_height="117dp"
            android:foregroundGravity="center"
            android:onClick="imageselectionReg"
            android:src="@drawable/profileicon"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/Layout1"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="120dp"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="top"
            android:gravity="top"
            android:textColorHint="@color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_name"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayoutName"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"

                android:maxLines="1"
                android:textColor="@android:color/white"

                tools:targetApi="lollipop" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayoutEmail"

            android:textColorHint="@color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:maxLines="1"

                android:textColor="@android:color/white"

                tools:targetApi="lollipop" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayoutPassword"

            android:textColorHint="@color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_confirm_password"

                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@android:color/white"

                tools:targetApi="lollipop" />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout2"
        android:layout_width="255dp"
        android:layout_height="260dp"
        android:layout_gravity="top|center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="156dp"
        android:visibility="gone">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutAge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:textColorHint="@android:color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/TextInputEditTextAge2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/age"
                android:inputType="number"
                android:maxLines="1"

                android:shadowColor="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/white"
                tools:targetApi="lollipop" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutHei2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayoutAge2"
            android:textColorHint="@android:color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/TextInputEditTextHei2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/height"
                android:inputType="number"

                android:maxLines="1"
                android:shadowColor="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/white"
                tools:targetApi="lollipop" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutWei2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@+id/textInputLayoutHei2"
            android:textColorHint="@android:color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/TextInputEditTextWei2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/weight"
                android:inputType="number"

                android:maxLines="1"
                android:shadowColor="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/white"
                tools:targetApi="lollipop" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radio_pirates2"
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:layout_below="@+id/textInputLayoutWei2"
            android:onClick="onRadioButtonClicked"
            android:shadowColor="@color/colorAccent"
            android:text="@string/male"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:visibility="visible" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/radio_ninjas2"
            android:layout_width="94dp"
            android:layout_height="43dp"
            android:layout_below="@+id/textInputLayoutWei2"
            android:layout_toEndOf="@+id/radio_pirates2"
            android:layout_toRightOf="@+id/radio_pirates2"
            android:onClick="onRadioButtonClicked"
            android:text="@string/female"
            android:textColor="@color/colorAccent"
            android:visibility="visible" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/registerNext3"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="420dp"
        android:theme="@style/PrimaryButtonBlue"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/text_register"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/Layout3"
        android:layout_width="353dp"
        android:layout_height="176dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="208dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/lazy" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutType2"
                android:layout_width="248dp"
                android:layout_height="117dp"
                android:layout_weight="1"
                android:visibility="visible">

                <TextView
                    android:id="@+id/TextInputEditTextType2"
                    android:layout_width="221dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:inputType="none"
                    android:maxLines="1"
                    android:text="@string/how_active_are_you_daily"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:visibility="visible" />

                <SeekBar
                    android:id="@+id/seekBar3"
                    style="@style/Widget.AppCompat.SeekBar"
                    android:layout_width="179dp"
                    android:layout_height="77dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="1" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/active" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/registerNext1"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="420dp"
        android:theme="@style/PrimaryButtonBlue"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/next"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/registerNext2"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="420dp"
        android:theme="@style/PrimaryButtonBlue"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/next"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/appCompatTextViewLoginLink2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="500dp"
        android:gravity="center"
        android:text="@string/already_a_member_login"
        android:textColor="@color/white"
        android:textSize="16sp" />


</FrameLayout>